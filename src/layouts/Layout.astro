---
export interface Props {
  title: string;
}

const { title } = Astro.props;

//Global StyleSheet Import
import '@/styles/global.css';

//Component Import
import Nav from '@/components/nav/Nav';
import Footer from '@/components/footer/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8" />
    <meta property="theme-color" content="#0a0a0a" />
    <link rel="canonical" href="https://franguerrero.dev" />
    <link rel="icon" type="image/svg" sizes="1024x1024" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Meta Tags -->
    <meta
      name="description"
      content="Engineer and Developer based in Buenos Aires. Specialized in React stack and Astro framework."
    />
    <meta
      name="keywords"
      content="frontend,react,astro,javascript,developer,website,development,html,coding,front,end,css,webpage,nextjs,tailwind,framer,motion"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content="Engineer and Developer based in Buenos Aires. Specialized in React stack and Astro framework."
    />
    <meta property="og:site_name" content="Francisco Guerrero" />
    <meta property="og:title" content="Francisco Guerrero" />
    <meta
      property="og:image"
      content="https://franguerrero.dev/ogImageNew.png"
    />
    <meta property="og:url" content="https://franguerrero.dev" />

    <!-- Twitter -->
    <meta
      name="twitter:image"
      content="https://franguerrero.dev/ogImageNew.png"
    />
    <meta name="twitter:image:type" content="png" />
    <meta name="twitter:title" content="Francisco Guerrero" />
    <meta property="twitter:url" content="https://franguerrero.dev" />
    <meta name="twitter:creator" content="@frnguerrero" />
    <meta
      name="twitter:description"
      content="Engineer and Developer based in Buenos Aires. Specialized in React stack and Astro framework."
    />

    <!-- Google tags -->
    <meta name="author" content="Francisco Guerrero" />
    <meta name="revisit-after" content="35 Days" />
    <meta name="GOOGLEBOT" content="index,follow,all" />
    <meta name="ROBOTS" content="INDEX,FOLLOW" />
    <meta name="ROBOTS" content="ALL" />
    <meta name="language" content="English" />
    <meta name="distribution" content="Global" />
    <!--Meta Tags -->

    <!-- Google Fonts Import -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <!-- Google Fonts Import -->

    <!-- Umami analytics -->
    <script
      async
      src="https://us.umami.is/script.js"
      data-website-id="6d850b59-1691-428c-89ae-13854b49c461"></script>
  </head>
  <body class="bg-neutral-950 font-inter">
    <section
      class=`bg-[url("/linesBackgroundMobile.svg")] md:bg-[url("/linesBackground.svg")] bg-no-repeat bg-fixed bg-[length:auto_100lvh] md:bg-cover lg:bg-bottom h-full w-full`
    >
      <Nav client:visible />
      <slot />
      <Footer />
    </section>
  </body>
</html>
