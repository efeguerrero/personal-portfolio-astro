---
export interface Props {
  title: string;
}

const { title } = Astro.props;

// Global StyleSheet Import
import '../styles/app.scss';

//Component Import
import Nav from '@/components/nav/Nav';
import Footer from '@/components/footer/Footer';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:description" content="Hi,I'm Francisco.Web developer." />
    <meta
      content="https://portfolio-fg.netlify.app/android192.png"
      property="og:image"
    />
    <meta name="theme-color" content="#000000" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/logo192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/logo512.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Meta Tags -->

    <meta
      name="description"
      content="Personal portfolio website for Web Developer Francisco Guerrero"
    />
    <meta
      name="keywords"
      content="frontend,react,astro,javascript,developer,website,development,html,coding,front,end,css,webpage"
    />

    <meta name="author" content="Francisco Guerrero" />
    <meta name="revisit-after" content="35 Days" />
    <meta name="GOOGLEBOT" content="index,follow,all" />
    <meta name="ROBOTS" content="INDEX,FOLLOW" />
    <meta name="ROBOTS" content="ALL" />
    <meta name="language" content="English" />
    <meta name="distribution" content="Global" />

    <!--Meta Tags -->
  </head>
  <body>
    <Nav client:visible />
    <slot />
  </body>
</html>
