---
//Components Imports
import Container from '@/components/common/Container.astro';
import SkillsContainer from '@/components/about/SkillsContainer.jsx';

//Image imports
import profileImg from '@/assets/images/profile.png';
---

<Container>
  <section
    id="about"
    class="flex flex-col items-center justify-center py-32 sm:py-32 gap-8"
  >
    <h2
      class="font-normal text-3xl mb-6 lg:w-min text-right text-neutral-200 leading-none tracking-tighter mr-auto"
    >
      about me
    </h2>
    <div
      class="flex flex-col lg:mt-16 items-center justify-center sm:flex-row sm:items-start lg:gap-16 gap-8 lg:px-24"
    >
      <div class="flex flex-col lg:flex-row gap-12">
        <div class="lg:max-w-[40ch] xl:max-w-[50ch]">
          <h3
            class="font-normal text-base text-neutral-400 lg:text-neutral-300"
          >
            Hello! I'm Francisco, industrial engineer and web developer based in
            Buenos Aires, Argentina, mainly specializing in React stack and
            Astro Framework.
            <br /><br />
          </h3>
          <h3 class="font-normal text-neutral-400 lg:text-neutral-300">
            Passionate about coding and creating beautiful user experiences. I’m
            a well-organized person with great interpersonal skills, high
            attention to detail and a great enthusiasm for problem solving.
            <br /><br />
            I’m always open to discussing new work or partnership opportunities.
          </h3>
        </div>
        <SkillsContainer client:idle />
      </div>
    </div>
  </section>
</Container>
